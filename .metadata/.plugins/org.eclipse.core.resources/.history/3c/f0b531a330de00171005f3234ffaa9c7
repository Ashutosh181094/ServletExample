import java.sql.*;
import java.awt.Color;
import java.awt.Font;
import java.awt.event.*;
import java.util.*;
import javax.swing.*;

public class GUI_DB extends JFrame {
JLabel l1,l2,l3,l4;
JTextField tf1,tf2,tf3,tf4;
JButton b1,b2,b3;
public GUI_DB()
{
	setTitle("Registration Page");
	setLayout(null);
	l1=new JLabel("ROLL :");
	l2=new JLabel("Name :");
	l3=new JLabel("CGPA :");
	l4=new JLabel("Register here");
	tf1=new JTextField();
	tf2=new JTextField();
	tf3=new JTextField();
	b1=new JButton("Insert");
	b2=new JButton("Update");
	b3=new JButton("Delete");
	add(l1);
	add(l2);
	add(l3);
	add(l4);
	add(tf1);
	add(tf2);
	
	add(tf3);
	add(b1);
	add(b2);
	add(b3);
	l4.setBounds(120,15,300,30);
	l4.setFont(new Font("verdana",Font.BOLD,20));
	l4.setForeground(Color.red);
	l1.setBounds(50,50,100,30);
	l2.setBounds(50,90,100,30);
	l3.setBounds(50,130,100,30);
	tf1.setBounds(160,50,190,30);
	tf2.setBounds(160,90,190,30);
	tf3.setBounds(160,130,100,30);
	tf1.setBounds(50,170,90,30);
	tf2.setBounds(155,170,90,30);
	tf3.setBounds(260,170,90,30);
	setSize(400,400);
	setLocation(200,100);
	setVisible(true);
	setTitle("Registration page");
	setLayout(null);
	
	
	
}
public static void main(String args[])
{
	new GUI_DB();
}

}
